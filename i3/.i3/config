# Custom i3exit
set $i3exit /opt/scripts/i3lock/i3exit

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l       exec --no-startup-id $i3exit lock,      mode "default"
    bindsym e       exec --no-startup-id $i3exit logout,    mode "default"
    bindsym s       exec --no-startup-id $i3exit suspend,   mode "default"
    bindsym h       exec --no-startup-id $i3exit hibernate, mode "default"
    bindsym r       exec --no-startup-id $i3exit reboot,    mode "default"
    bindsym Shift+s exec --no-startup-id $i3exit shutdown,  mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Delete mode "$mode_system"
bindsym XF86PowerOff mode "$mode_system"

bindsym Control+Mod1+Delete exec $i3exit lock

# Escolher uma imagen aleatoriamente nas pastas wallpapers e backgrounds para plano de fundo.
exec_always feh --bg-scale $(find /usr/share/ -type f \( -regex '.*\.\(jpg\|png|gif|jpeg\)' -and -path '*share/wallpapers/*' -or -path '*share/backgrounds/*' \) 2> /dev/null | shuf -n1)

